grade=input("enter the grade of employee")
salary=int(input("enter the salary of the employee"))
if salary <=0:
    print("enter a valid salary")
if(grade!='A' or grade!='B'):
    print("enter a valid grade")
if grade=="A":
    if salary < 10000:
        bonus=salary*0.07
    else:
        bonus=salary*0.05
    print(bonus)
    new_salary=salary+bonus
    print(new_salary,"salary")
elif grade=="B":
    if salary < 10000:
        bonus=salary*0.12
    else:
        bonus=salary*0.1
    print("bonus:",bonus)
    new_salary=salary+bonus
    print("salary",salary)
    print("totalto bepaid:",new_salary)
else:
    print(salary)
